<Window x:Class="Homework_18_Patterns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        Title="{Binding Title}"
        xmlns:vm="clr-namespace:Homework_18_Patterns.ViewModels"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Добавить">
                    <MenuItem Header="Животное" Command="{Binding OpenAddAnimalWindowCommand}"/>
                    <MenuItem Header="Вид" Command="{Binding OpenAddSpeciesWindowCommand}"/>
                    <MenuItem Header="Класс" Command="{Binding OpenAddClassWindowCommand}"/>
                </MenuItem>
                <MenuItem Header="Сохранить как">
                    <MenuItem Header="Excel"/>
                    <MenuItem Header="PDF"/>
                    <MenuItem Header="Текстовый документ"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding Status}"/>
            </StatusBarItem> 
        </StatusBar>
        <TabControl>
            <TabItem Header="Животные">
                <Grid>
                    <DataGrid Name="AllAnimalsDG"
                        ItemsSource="{Binding AllAnimals}"
                        IsSynchronizedWithCurrentItem="True"
                        SelectionMode="Single" 
                        AutoGenerateColumns="False" 
                        CanUserAddRows="False"
                        IsReadOnly="True"
                        FontSize="13">

                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Кличка"
                                    Binding="{Binding Name}"/>

                            <DataGridTextColumn Header="Окрас" 
                                    Binding="{Binding Color}"/>

                            <DataGridTextColumn Header="Возраст" 
                                    Binding="{Binding Age}"/>

                            <DataGridTextColumn Header="Пол" 
                                    Binding="{Binding Gender}"/>
                            
                            <DataGridTextColumn Header="Вид" 
                                    Binding="{Binding Species}"/> 
                            
                            <DataGridTextColumn Header="Класс" 
                                    Binding="{Binding Class}"/>

                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить"/>
                                <MenuItem Header="Оформить заказ"/>
                                <MenuItem Header="Изменить данные"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                   
                </Grid>
            </TabItem>
            <TabItem Header="Вид">

                <Grid>
                    <DataGrid ItemsSource="{Binding AllAnimalSpecies}"
                        IsSynchronizedWithCurrentItem="True"
                        SelectionMode="Single" 
                        AutoGenerateColumns="False" 
                        CanUserAddRows="False"
                        IsReadOnly="True"
                        FontSize="13">

                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Название вида"
                                    Binding="{Binding SecondName}"/>
                            
                            <DataGridTextColumn Header="Класс" 
                                    Binding="{Binding PhoneNumber}"/>
 
                            <DataGridTextColumn Header="Количество животных" 
                                    Binding="{Binding PhoneNumber}"/>

                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить"/>
                                <MenuItem Header="Оформить заказ"/>
                                <MenuItem Header="Изменить данные"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </Grid>

            </TabItem>
            <TabItem Header="Класс">
                <Grid>
                    <DataGrid ItemsSource="{Binding AllAnimalClasses}"
                        IsSynchronizedWithCurrentItem="True"
                        SelectionMode="Single" 
                        AutoGenerateColumns="False" 
                        CanUserAddRows="False"
                        IsReadOnly="True"
                        FontSize="13">

                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Название класса"
                                    Binding="{Binding Path=Name}"/>
                            
                            <DataGridTextColumn Header="Количество животных" 
                                    />

                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить"/>
                                <MenuItem Header="Оформить заказ"/>
                                <MenuItem Header="Изменить данные"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
