<Window x:Class="Homework_18_Patterns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Homework_18_Patterns.ViewModels"
        xmlns:l="clr-namespace:Homework_18_Patterns"
        Title="{Binding Title}"
        Height="450" Width="800">
    <Window.InputBindings>
        <KeyBinding Modifiers="Control" Key="Q" Command="{Binding CloseApplicationCommand}"/>
    </Window.InputBindings>
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Command="{Binding CloseApplicationCommand}"/>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding Status}"/>
            </StatusBarItem> 
            <StatusBarItem>
                <ProgressBar Width="120" Height="14" Value="30"/>
            </StatusBarItem>
        </StatusBar>
        <TabControl>
            <TabItem Header="Животные">
                <Grid>
                    <DataGrid   x:Name="DataGridEnimals"
                    IsSynchronizedWithCurrentItem="True"
                    SelectionMode="Single" 
                    AutoGenerateColumns="False" 
                    CanUserAddRows="False"
                    IsReadOnly="False"
                    FontSize="20">

                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Кличка"
                                    Binding="{Binding SecondName}"/>

                            <DataGridTextColumn Header="Окрас" 
                                    Binding="{Binding FirstName}"/>

                            <DataGridTextColumn Header="Возраст" 
                                    Binding="{Binding MiddleName}"/>

                            <DataGridTextColumn Header="Пол" 
                                    Binding="{Binding PhoneNumber}"/>
                            
                            <DataGridTextColumn Header="Вид" 
                                    Binding="{Binding PhoneNumber}"/> 
                            
                            <DataGridTextColumn Header="Класс" 
                                    Binding="{Binding PhoneNumber}"/>

                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить"/>
                                <MenuItem Header="Оформить заказ"/>
                                <MenuItem Header="Изменить данные"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Вид">

                <Grid>
                    <DataGrid x:Name="DataGridSpecies"
                    IsSynchronizedWithCurrentItem="True"
                    SelectionMode="Single" 
                    AutoGenerateColumns="False" 
                    CanUserAddRows="False"
                    IsReadOnly="False"
                    FontSize="20">

                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Название вида"
                                    Binding="{Binding SecondName}"/>
                            
                            <DataGridTextColumn Header="Класс" 
                                    Binding="{Binding PhoneNumber}"/>
 
                            <DataGridTextColumn Header="Количество животных" 
                                    Binding="{Binding PhoneNumber}"/>

                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить"/>
                                <MenuItem Header="Оформить заказ"/>
                                <MenuItem Header="Изменить данные"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </Grid>

            </TabItem>
            <TabItem Header="Класс">
                <Grid>
                    <DataGrid x:Name="DataGridClass"
                    IsSynchronizedWithCurrentItem="True"
                    SelectionMode="Single" 
                    AutoGenerateColumns="False" 
                    CanUserAddRows="False"
                    IsReadOnly="False"
                    FontSize="20">

                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Название класса"
                                    Binding="{Binding SecondName}"/>
                            
                            <DataGridTextColumn Header="Количество животных" 
                                    Binding="{Binding PhoneNumber}"/>

                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить"/>
                                <MenuItem Header="Оформить заказ"/>
                                <MenuItem Header="Изменить данные"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
